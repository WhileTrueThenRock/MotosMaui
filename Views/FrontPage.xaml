<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MauiMotos.ViewModels"
             x:DataType="viewmodels:FrontViewModel"
             x:Class="MauiMotos.FrontPage"
             Title="NewPage1">
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Label Text="Iniciar Sesión" FontSize="Large" HorizontalOptions="CenterAndExpand" Margin="0,0,0,20"/>

        <Entry x:Name="EntryUsuario" Placeholder="Usuario" Margin="0,0,0,10"/>
        <Entry x:Name="EntryPassword" Placeholder="Contraseña" IsPassword="True" Margin="0,0,0,10"/>

        <Button Text="Iniciar Sesión" BackgroundColor="#4CAF50" TextColor="White"/>

        <Label Text="¿Olvidaste tu contraseña?" TextColor="#2196F3" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0"/>
    </StackLayout>
</ContentPage>